{
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@scripts/*": ["./scripts/*"],
    },
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  },
  "include": [
    "./src/**/*.ts",
    "./scripts/**/*.ts",
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}